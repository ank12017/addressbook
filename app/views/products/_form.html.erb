<div id="all"> 
  <div id="content">
    <div class="container">
      <%= form_for(product) do |f| %>
        <% if product.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>
            <ul>
            <% product.errors.full_messages.each do |message| %>
            <% end %>
            </ul>
          </div>
        <% end %>
         <div class="form-group">
          <div class="col-lg-10">
            <%= f.fields_for :avatars do |avatar| %>     
            <%= render :partial => "avatar_fields", :locals => { :f => avatar } %>    
            <% end %>                    
            <%= link_to_add_association "Upload New avatar", f, :avatars, class: "btn btn-primary img-btn" %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-lg-10">
            <%= f.label :price %>
            <%= f.text_field :price %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-lg-10">
            <%= f.label :title %>
            <%= f.text_field :title %>
          </div>
        </div>
        <div class="col-lg-10">
        <div class="actions">
          <%= f.submit %>
        </div>
        </div>
      <% end %>
    </div>
  </div>
</div>