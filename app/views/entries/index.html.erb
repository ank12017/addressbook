<p id="notice"><%= notice %></p>
<h1>Entries</h1>
<table class="table table-hover" id="entries">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Phone</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @entries.each do |entry| %>
     <tr id="<%= entry.id %>">
        <td><%= entry.name %></td>
        <td><%= entry.address %></td>
        <td><%= entry.phone %></td>
        <td><%= entry.email %></td>
        <td><%= link_to 'Show', entry %></td>
        <td>
          <%= link_to edit_entry_path(entry), remote: true do %>
              <button>Edit</button>
          <% end %>
        </td>
        <td>
          <%= link_to entry, remote: true, method: :delete,  data: { confirm: 'Are you sure?' } do %>
            <button>Delete!</button>
          <% end %>
        </td>
     </tr> 
    <% end %>
  </tbody>
</table>
<br>
<div class="row">
  <div class="col-md-5 col-md-offset-1">
    <%= link_to new_entry_path, remote: true do %>
      <button class="btn btn-default">New Entry</button>
    <% end %>
  </div>
</div>
<div id="entries">
</div>
